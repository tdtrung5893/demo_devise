<div class="container">
	<div class="row">
		<div class="col-sm-offset-5">
			<h1>New Product</h1>
  			<%= form_for(@product) do |f| %>
			<div class="form-group">
			    <%= f.label :name %>
			    <%= f.text_field :name %>
			</div>

			<div class="form-group">
			    <%= f.label :brand %>
			    <%= f.select :brand, ['Apple','Samsung', 'HTC', 'Xiaomi', 'Blackberry', 'Nokia'], :prompt => '...' %>
			</div>

			<div class="form-group">
			    <%= f.label :price %>
			    <%= f.text_field :price %>
			</div>

			<div class="form-group">
			    <%= f.label :description %>
			    <%= f.text_field :description %>
			</div>

			<div class="form-group">
			  	<%= f.label :Quantity %>
			  	<%= f.text_field :Quantity %>
			</div>

			<div class="actions">
			    <%= f.submit "Create", class: "btn btn-primary" %>
			</div>
		</div>
	</div>
</div>
<% end %>