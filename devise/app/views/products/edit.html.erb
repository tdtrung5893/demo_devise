<div class="container">
  <div class="col-sm-offset-5">	
	<%= form_with(model: @product, local: true) do |form| %>

	  <div class="form-group">
	    <%= form.label :name %>
	    <%= form.text_field :name, id: :product_name %>
	  </div>
      
      <div class="form-group">
		<%= form.label :brand %>
		<%= form.select :brand, ['Apple','Samsung', 'HTC', 'Xiaomi', 'Blackberry', 'Nokia'], :prompt => :product_brand %>

	  <div class="form-group">
	    <%= form.label :price %>
	    <%= form.text_field :price, id: :product_price %>
	  </div>

	  <div class="form-group">
	    <%= form.label :oldPrice, value: 'Old Price' %>
	    <%= form.text_field :oldPrice, id: :product_oldPrice %>
	  </div>

	  <div class="form-group">
	    <%= form.label :offer %>
	    <%= form.text_field :offer, id: :product_offer %>
	  </div>

	   <div class="form-group">
	    <%= form.label :description %>
	    <%= form.text_field :description, id: :product_description %>
	  </div>

	  <div class="form-group">
	    <%= form.label :Quantity %>
	    <%= form.text_field :Quantity, id: :product_quantity %>
	  </div>  

	  <div class="form-group">
	  	<%= form.label :image %>
	  	<%= form.file_field :image, id: :product_image %>	
	  </div>

	  <div class="actions">
	    <%= form.submit %>
	  </div>
  </div>
</div>
<% end %>